<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KomodoPass.MainPage">


    
    <FlexLayout Direction="Column">

       <StackLayout BackgroundColor="IndianRed">
            <Entry Placeholder="Username" x:Name="UserLogin" PlaceholderColor="White" />
            <Entry Placeholder="Senha" x:Name="SenhaLogin" PlaceholderColor="White"  IsPassword="True"/>
            <Button x:Name="criar" Text="criarLogin" Clicked="criarLogin_Clicked" Background="IndianRed" />
            <Button x:Name="Login" Text="Login" Clicked="Login_Clicked" Background="IndianRed" />
            

        </StackLayout>

        <VerticalStackLayout Padding="10" FlexLayout.Basis="400" BackgroundColor="Black">
            <Entry x:Name="NameEntryField" Placeholder="title" />
            <Entry x:Name="EmailEntryField" Placeholder="email" />
            <Entry x:Name="UserEntryField" Placeholder="user" />
            <Entry x:Name="SenhaEntryField" Placeholder="Senha" IsPassword="False" />
            <Entry x:Name="NotasEntryField" Placeholder="Notas" />
            <Entry x:Name="WebsiteEntryField" Placeholder="website" />
            <Button x:Name="Salvar" Text="Salvar" Clicked="Salvar_Clicked" />
        </VerticalStackLayout>
        <SearchBar x:Name="Busca" Placeholder="Busca" TextChanged="Busca_TextChanged">
        </SearchBar>
        <ListView x:Name="listView" FlexLayout.Grow="1" HasUnevenRows="True" ItemTapped="ListView_ItemTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <VerticalStackLayout Padding="5">
                            <Label Text="{Binding Title}" FontSize="17" FontAttributes="Bold" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding Email}" />
                                <Label Grid.Column="2" Text="{Binding Password}" FontAttributes="Bold" />
                            </Grid>
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView> 

    </FlexLayout>
</ContentPage>
