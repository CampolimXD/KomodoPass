<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KomodoPass.MainPage">

    <FlexLayout Direction="Column">
        
        <SearchBar x:Name="Busca" Placeholder="Busca" TextChanged="Busca_TextChanged">
</SearchBar>
        <ListView x:Name="listView" FlexLayout.Grow="1" ItemTapped="ListView_ItemTapped" VerticalScrollBarVisibility="Always" MinimumHeightRequest="200" MaximumHeightRequest="500">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <VerticalStackLayout Padding="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=".3*" />
                                    <ColumnDefinition Width=".2*" />
                                    <ColumnDefinition Width=".2*" />
                                    <ColumnDefinition Width=".2*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding Title}" FontSize="17" FontAttributes="Bold" />
                                <Label Grid.Column="1" Text="User" FontSize="17" FontAttributes="Bold" />
                                <Label Grid.Column="2" Text="Senha" FontSize="17" FontAttributes="Bold" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width=".3*" />
                                    <ColumnDefinition Width=".2*" />
                                    <ColumnDefinition Width=".2*" />
                                    <ColumnDefinition Width=".1*" />
                                    <ColumnDefinition Width=".1*" />
                                    
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding Email}" />
                                <Label Grid.Column="1" Text="{Binding Username}" />
                                <Label Grid.Column="2" Text="{Binding Password}" FontAttributes="Bold" />
                                <Button 
                                    Grid.Column="3"
                                    WidthRequest="5" 
                                    HeightRequest="5" 
                                    CornerRadius="5" 
                                    BackgroundColor="RoyalBlue" 
                                    Text="🔌" 
                                    
                                    TextColor="White" />
                                <Button 
                                     Grid.Column="4"
                                     WidthRequest="5" 
                                     HeightRequest="5" 
                                     CornerRadius="5" 
                                     BackgroundColor="RoyalBlue" 
                                     Text="📃" 
                                     
                                     TextColor="White" />
                            </Grid>
                        </VerticalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <VerticalStackLayout Padding="10" FlexLayout.Basis="400" BackgroundColor="Black">
            <Entry x:Name="NameEntryField" Placeholder="title" />
            <Entry x:Name="EmailEntryField" Placeholder="email" />
            <Entry x:Name="UserEntryField" Placeholder="user" />
            <Entry x:Name="SenhaEntryField" Placeholder="Senha" IsPassword="False" />
            <Entry x:Name="NotasEntryField" Placeholder="Notas" />
            <Entry x:Name="WebsiteEntryField" Placeholder="website" />
            <Button x:Name="Salvar" Text="Salvar" Clicked="Salvar_Clicked" />
        </VerticalStackLayout>
    </FlexLayout>
</ContentPage>
